{
  "Version": "2012-10-17",
  "Statement": [
    {
			"Sid": "AllowECRAuth",
			"Effect": "Allow",
			"Action": [
				"ecr:GetAuthorizationToken"
			],
			"Resource": "*"
		},
		{
		  "Sid": "AllowPullForSpecificRepo",
			"Effect": "Allow",
			"Action": [
				"ecr:BatchCheckLayerAvailability",
				"ecr:GetDownloadUrlForLayer",
				"ecr:BatchGetImage"
			],
			"Resource": "arn:aws:ecr:<aws-region>:<aws-account-id>:repository/<ecr-repository-name>"
		},
    {
      "Sid": "AllowAccessForSpecificBucket",
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket",
        "s3:GetObject",
        "s3:PutObject"
      ],
      "Resource": [
        "arn:aws:s3:::<aws-account-id>-<company>-iac-terraform-state",
        "arn:aws:s3:::<aws-account-id>-<company>-iac-terraform-state/*"
      ]
    },
    {
      "Sid": "AllowAccessForSpecificTable",
      "Effect": "Allow",
      "Action": [
        "dynamodb:GetItem",
        "dynamodb:PutItem",
        "dynamodb:DeleteItem",
        "dynamodb:DescribeTable"
      ],
      "Resource": "arn:aws:dynamodb:<aws-region>:<aws-account-id>:table/<company>-iac-terraform-locks"
    }
  ]
}
